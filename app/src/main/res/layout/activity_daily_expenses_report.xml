<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Reports.daily.DailyExpensesReportActivity">

    <RelativeLayout
        android:background="@drawable/moneyimage"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <Button
            android:layout_below="@id/toolbar"
            android:id="@+id/btn_go_to_calendar"
            android:text="@string/select_a_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_below="@id/btn_go_to_calendar"
            android:id="@+id/chosenDate"
            android:hint="Date"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:layout_below="@id/chosenDate"
            android:id="@+id/daily_expenses"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>