<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BudgetAndDailyExpenses.daily.DailyExpensesActivity">

    <RelativeLayout
        android:background="@drawable/moneyimage"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <Button
            android:layout_below="@id/toolbar"
            android:id="@+id/day_selector"
            android:text="@string/select_a_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="24sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/day_selector"
            android:id="@+id/selected_day"
            android:hint="Date"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:layout_below="@id/selected_day"
            android:id="@+id/daily"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>