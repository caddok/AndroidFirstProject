<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".summary.MonthlySummaryFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Spinner
            android:id="@+id/spinner_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="24sp"
            android:layout_centerHorizontal="true"
            android:id="@+id/income_tv"
            android:layout_marginTop="30dp"
            android:layout_below="@id/spinner_summary"
            android:text="Monthly income:"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />

        <TextView
            android:hint="Income"
            android:textSize="24sp"
            android:layout_marginTop="30dp"
            android:layout_below="@id/income_tv"
            android:id="@+id/income_summary"
            android:layout_centerHorizontal="true"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="24sp"
            android:layout_centerHorizontal="true"
            android:id="@+id/tv_taxes"
            android:text="Spend on taxes:"
            android:layout_marginTop="30sp"
            android:layout_below="@id/income_summary"
            android:layout_width="250sp"
            android:layout_height="wrap_content" />

        <TextView
            android:hint="Taxes"
            android:textSize="24sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_below="@id/tv_taxes"
            android:id="@+id/taxes_summary"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@id/taxes_summary"
            android:text="Money per day:"
            android:textSize="24dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:id="@+id/tv_funds"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />

        <TextView
            android:hint="Funds"
            android:textSize="24sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_below="@id/tv_funds"
            android:id="@+id/funds_per_day"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</FrameLayout>