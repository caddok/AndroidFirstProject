<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.georgi.allaboutthemoney">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
        <activity
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:name=".summary.MonthlySummary">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:name=".utils.CalendarActivity" />
        <activity
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:name=".BudgetAndDailyExpenses.SetBudget.SetBudgetActivity" />
        <activity
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:name=".BudgetAndDailyExpenses.daily.DailyExpensesActivity" />
        <activity
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:name=".Dreams.create.CreateDreamActivity" />
        <activity
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:name=".Dreams.current.CurrentDreamActivity" />
        <activity
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:name=".Reports.daily.DailyExpensesReportActivity" />
        <activity
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:name=".Reports.weekly.WeeklyExpensesReportActivity" />
        <activity
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:name=".Reports.monthly.MonthlyExpensesReportActivity" />
    </application>

</manifest>